{% extends "base.njk" %}

{% block header %}
<header class="py-3">
    <div class="container px-5">
        <div class="row gx-5 align-items-center justify-content-center">
            <div class="col-lg-10">
                <div class="my-5 text-center">
                    <h1 class="display-6 fw-bolder mb-3">{{ title }}</h1>
                    <p class="lead mb-4">{{ description }}</p>
                    <div class="d-flex justify-content-center align-items-center gap-4 text-muted">
                        <div>
                            <i class="fa-solid fa-calendar-days me-2"></i>
                            <time datetime="{{ date | date('YYYY-MM-DD') }}">{{ date | date('dddd, MMMM Do, YYYY') }}</time>
                        </div>
                        <div>
                            <i class="fa-solid fa-newspaper me-2"></i>
                            {{ references.count }} articles from {{ references.sources }} sources
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>
{% endblock %}

{% block content %}
<section class="section py-5">
    <div class="container px-5">
        <div class="row gx-5 justify-content-center">
            <div class="col-lg-10">
                {# Main digest content #}
                <div class="card mb-5">
                    <div class="card-body p-5">
                        <div class="small text-uppercase fw-bold text-primary mb-3">
                            <i class="fa-solid fa-file-text me-2"></i>
                            Daily News Digest
                        </div>
                        <div class="digest-content">
                            {{ digest_content | replace('\n\n', '</p><p>') | replace('\n', '<br>') | safe | replace('<p>', '<p class="mb-4">') }}
                        </div>
                    </div>
                </div>

                {# Sources summary #}
                <div class="card mb-5">
                    <div class="card-header">
                        <h3 class="card-title mb-0">
                            <i class="fa-solid fa-list-ul me-2"></i>
                            News Sources Summary
                        </h3>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-6">
                                <div class="text-center">
                                    <div class="display-6 fw-bold text-primary">{{ references.count }}</div>
                                    <div class="text-muted">Total Articles</div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="text-center">
                                    <div class="display-6 fw-bold text-success">{{ references.sources }}</div>
                                    <div class="text-muted">News Sources</div>
                                </div>
                            </div>
                        </div>

                        <h4 class="h6 fw-bold mb-3">Sources:</h4>
                        <div class="d-flex flex-wrap gap-2 mb-3">
                            {% for source in references.source_list %}
                            <span class="badge bg-secondary">{{ source }}</span>
                            {% endfor %}
                        </div>
                    </div>
                </div>

                {# Article sources accordion #}
                {% if articles.length > 0 %}
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title mb-0">
                            <i class="fa-solid fa-newspaper me-2"></i>
                            Article Sources
                        </h3>
                    </div>
                                        <div class="card-body">
                        <div class="accordion" id="articlesAccordion">
                            {%- for source, sourceArticles in site.articlesBySource(articles) -%}
                            <div class="accordion-item">
                                <h4 class="accordion-header" id="heading{{ loop.index }}">
                                    <button class="accordion-button {% if not loop.first %}collapsed{% endif %}" type="button" data-bs-toggle="collapse" data-bs-target="#collapse{{ loop.index }}" aria-expanded="{% if loop.first %}true{% else %}false{% endif %}" aria-controls="collapse{{ loop.index }}">
                                        <strong>{{ source }}</strong>
                                        <span class="badge bg-secondary ms-2">{{ sourceArticles.length }} article{% if sourceArticles.length > 1 %}s{% endif %}</span>
                                    </button>
                                </h4>
                                <div id="collapse{{ loop.index }}" class="accordion-collapse collapse {% if loop.first %}show{% endif %}" aria-labelledby="heading{{ loop.index }}" data-bs-parent="#articlesAccordion">
                                    <div class="accordion-body">
                                        <ul class="fa-ul">
                                            {%- for article in sourceArticles -%}
                                            <li>
                                                <span class="fa-li">
                                                    <i class="text-success fa-solid fa-caret-right"></i>
                                                </span>
                                                <a href="{{ article.url }}" target="_blank" rel="noopener noreferrer">
                                                    {{ article.title | replace('"', '') }}
                                                </a>
                                            </li>
                                            {%- endfor -%}
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            {%- endfor -%}
                        </div>
                    </div>
                </div>
                {% endif %}

                {# Navigation #}
                <div class="mt-5 d-flex justify-content-between">
                    <a href="/news/" class="btn btn-outline-primary">
                        <i class="fa-solid fa-arrow-left me-2"></i>
                        All News Digests
                    </a>
                    <div class="text-muted small">
                        Generated on {{ generated_at | date('MMMM Do, YYYY [at] h:mm A [UTC]') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
